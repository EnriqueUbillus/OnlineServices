@{
    ViewData ["Title"] = "Edit";
}

@model OnlineServices.Common.EvaluationServices.TransfertObjects.QuestionPropositionTO
@using OnlineServices.WebUx.Mvc6.Areas.Assessments.Controllers

@using (Html.BeginForm(actionName: "Edit", controllerName: "QuestionProposition", method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Question : </label>
        </div>
        <div class="col-md-10">
            @Html.DropDownListFor(Model => Model.Question, new SelectList(QuestionController.questions, "Libelle.English"), new { @class = "form-control dropdown-toggle" })
            @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Position : </label>
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.Position, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Name : </label>
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.Libelle.English, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Libelle.English, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Nom : </label>
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.Libelle.French, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Libelle.French, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Naam : </label>
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.Libelle.Dutch, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Libelle.Dutch, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary col-md-2" />
    </div>

    <div>
        @Html.ActionLink("Back to list", "GetByQuestionId")
    </div>
}

